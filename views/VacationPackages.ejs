<!DOCTYPE html>
<html>
	<head> 
        <!--Calls head.ejs to write a script that changes the title and imports all the basic js,css, and logos for the page-->
        <%-include("ejsSub/head.ejs", {name:"Cheap Vacation Packages"})%> 

        <!--Calls whenWindowResizes.ejs to write a script that reads when the window is resized-->
        <%-include("ejsSub/whenWindowResizes.ejs")%> 

        <!--Calls vacationPackage.css to style the page-->
        <link rel = "stylesheet" type = "text/css" href = "vacationPackage.css"></link>

        <script src = "vacationPackageScript.js"></script>

        <!--Calls getSessionStorageFromMain.ejs to get user input from the home page-->
        <% if(isFromHome == true) {%>
            <%-include("ejsSub/getSessionStorageFromMain.ejs")%>
        <%}%>
	</head>
	
	<body>
        <!--Calls header.ejs to write html to display the header and the navigation bar-->  
        <header class = "container-fluid">
            <%-include("ejsSub/header.ejs")%>
        </header>		
        <br/>

        <!--Vacation search tool-->
        <div class = "container text-center" id = "vacationForm">
            <h1 id = "formTitle">Find Your Vacation</h1>
            <form class = "container">
                <input type = "text" name = "searchPackageName" id  = "searchId" placeholder="Search Package Name"></input>
                <input type = "text" name = "startDate" id  = "strDateId" placeholder  = "Start Date" onblur="(this.type = 'text');"  onfocus ="(this.type = 'date');"></input> <!--- Creates date droplist for user to select a date --->	
                <input type = "text" name = "endDate" id  = "endDateId" placeholder  = "End Date" onblur="(this.type = 'text');"  onfocus ="(this.type = 'date');"></input> <!--- Creates date droplist for user to select a date --->
                <button type = "button" id = "searchPackageButton" onclick = "filter('searchId','strDateId','endDateId', 'packages');">Search</button>
            </form>
        </div>

        <!--packages-->
        <div id = "packages">
            <% for (i = 0; i < packages.length; i++){ %>
                <div class = "container" id = "containers" >
                    <h1 id = "packageTitle"><%=packages[i].PkgName%></a>
                    <br/>
                    <h2 id="packageStrtEndDates"><%=packages[i].PkgStartDate%> - <%=packages[i].PkgEndDate%></h2>
                    <br/>
                    <p id = "packageDesc"><%=packages[i].PkgDesc%></p>
                    <br/>
                    <p id = "packagePrice">Base Price: $<%=packages[i].PkgBasePrice%></p>
                </div>
            <%} %>
        </div>

        <!--Footer-->
        <footer class = "container">
            <%-include("ejsSub/footer.ejs")%>
        </footer>
	</body>
</html>